        <!-- Stand -->
        <Region name="standingLeftFireMario"   x="180" y="122" width="16" height="32"/>
        <Region name="standingRightFireMario"  x="209" y="122" width="16" height="32"/>

        <!-- Fire throw -->
        <Region name="leftFlameThrow"          x="77"  y="123" width="16" height="30"/>
