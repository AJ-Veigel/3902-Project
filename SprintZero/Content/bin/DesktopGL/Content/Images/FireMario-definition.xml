    <Animations>
        <Animation name="fireRightMove" delay="200">
            <Frame region="rightFireMario1"/>
            <Frame region="rightFireMario2"/>
            <Frame region="rightFireMario3"/>
            <Frame region="rightFireMario2"/>
        </Animation>

        <Animation name="fireLeftMove" delay="200">
            <Frame region="leftFireMario1"/>
            <Frame region="leftFireMario2"/>
            <Frame region="leftFireMario3"/>
            <Frame region="leftFireMario2"/>
        </Animation>

        <Animation name="fireLeftFlag" delay="200">
            <Frame region="flagpoleLeftFireMario1"/>
            <Frame region="flagpoleLeftFireMario2"/>
        </Animation>

        <Animation name="fireRightFlag" delay="200">
            <Frame region="flagpoleRightFireMario1"/>
            <Frame region="flagpoleRightFireMario2"/>
        </Animation>

        <Animation name="fireThrowRight" delay="200">
            <Frame region="rightFlameThrow"/>
        </Animation>

        <Animation name="fireThrowLeft" delay="200">
            <Frame region="leftFlameThrow"/>
        </Animation>

        <Animation name="fireLeftSwim" delay="200">
            <Frame region="leftSwimFireMario1"/>
            <Frame region="leftSwimFireMario2"/>
            <Frame region="leftSwimFireMario3"/>
            <Frame region="leftSwimFireMario4"/>
            <Frame region="leftSwimFireMario5"/>
            <Frame region="leftSwimFireMario6"/>
        </Animation>

        <Animation name="fireRightSwim" delay="200">
            <Frame region="rightSwimFireMario1"/>
            <Frame region="rightSwimFireMario2"/>
            <Frame region="rightSwimFireMario3"/>
            <Frame region="rightSwimFireMario4"/>
            <Frame region="rightSwimFireMario5"/>
            <Frame region="rightSwimFireMario6"/>
        </Animation>
    </Animations>
