        <Region name="rightSwimFireMario1"     x="209" y="158" width="16" height="29"/>
        <Region name="rightSwimFireMario2"     x="237" y="158" width="16" height="29"/>
        <Region name="rightSwimFireMario3"     x="262" y="158" width="16" height="29"/>
