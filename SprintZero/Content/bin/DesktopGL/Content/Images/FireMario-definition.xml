        <!-- Flagpole -->
        <Region name="flagpoleLeftFireMario1"  x="1"   y="158" width="14" height="30"/>
        <Region name="flagpoleLeftFireMario2"  x="28"  y="159" width="14" height="27"/>

        <Region name="flagpoleRightFireMario1" x="390" y="158" width="14" height="30"/>
        <Region name="flagpoleRightFireMario2" x="363" y="159" width="14" height="27"/>

        <!-- Swim (Left) -->
        <Region name="leftSwimFireMario1"      x="180" y="158" width="16" height="29"/>
        <Region name="leftSwimFireMario2"      x="152" y="158" width="16" height="29"/>
        <Region name="leftSwimFireMario3"      x="127" y="158" width="16" height="29"/>
        <Region name="leftSwimFireMario4"      x="103" y="158" width="14" height="30"/>
        <Region name="leftSwimFireMario5"      x="78"  y="158" width="14" height="30"/>
        <Region name="leftSwimFireMario6"      x="52"  y="158" width="16" height="30"/>

